{
  "compilerOptions": {
    "strict": false,             // Katı tip kontrolünü kapatır
    "noImplicitAny": false,      // any kullanımına izin verir
    "skipLibCheck": true,        // Kütüphane kontrolünü atlar (performans için)
    "moduleResolution": "node",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
